<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
    	<%= csrf_meta_tag %>
    	<%= render 'layouts/stylesheets' %>
		<%= javascript_include_tag "application" %>
  	</head>
  	<body id="home">
		<%= render 'layouts/header' %>
    	<div class="container">
      		<section class="round">
        		<% flash.each do |key, value| %>
				<div id= "flash" class="flash <%= key %>"><%= value %></div>
				<% end %>
				<%= yield %>
      		</section>
			<%= render 'layouts/footer'%>
    	</div>
  	</body>
</html>